@model Developer
@{ ViewBag.Title = "Форма"; }

<div class="d-flex justify-content-center">
    <form asp-action="BecomeDeveloper" class="col-lg-4 col-md-7 col-sm-10">
        <fieldset>
            <legend>Заповніть форму</legend>
            <div class="row">
                <label asp-for="Name" class="form-label mt-4">Ім'я</label>
                <div class="col-sm-10">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Введіть ім'я">
                </div>
                <small class="form-text text-danger">
                    @Html.ValidationMessageFor(model => model.Name)
                </small>
            </div>
            <div class="row">
                <label asp-for="Email" class="form-label mt-4">Email</label>
                <div class="col-sm-10">
                    <input asp-for="Email" type="text" class="form-control" placeholder="Введіть Email">
                </div>
                <small class="form-text text-danger">
                    @Html.ValidationMessageFor(m => m.Email)
                </small>
            </div>
            <div style="padding-top: 20px;">
                <button class="btn btn-primary" type="submit">Стати розробником</button>
            </div>
        </fieldset>
    </form>
</div>
